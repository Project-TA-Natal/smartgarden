<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Detail Informasi"
            android:textColor="@color/green_color"
            android:textSize="30sp"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/detail_kelembaban"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3330A74B"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_det_kel"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/batas_bawah_kel"
                        android:fontFamily="@font/poppins"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_soil_moisture_lower_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_kelembaban"
                        android:layout_marginStart="40dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/batas_atas_kel"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_soil_moisture_upper_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_kelembaban"
                        android:fontFamily="@font/poppins"
                        android:textColor="#000000"
                        android:layout_marginStart="60dp"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/detail_suhu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3330A74B"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_suhu"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/batas_bawah_suhu"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_temperature_lower_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_suhu"
                        android:fontFamily="@font/poppins"
                        android:textColor="#000000"
                        android:layout_marginStart="40dp"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/batas_atas_suhu"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_temperature_upper_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_suhu"
                        android:fontFamily="@font/poppins"
                        android:textColor="#000000"
                        android:layout_marginStart="60dp"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/detail_ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3330A74B"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/batas_ph_tanah"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/batas_bawah_ph"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_soil_ph_lower_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:text="@string/nilai_ph"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/batas_atas_ph"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_soil_ph_upper_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_ph"
                        android:textColor="#000000"
                        android:layout_marginStart="60dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/batas_min_ph"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_soil_ph_minimum_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_ph"
                        android:textColor="#000000"
                        android:layout_marginStart="70dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/batas_max_ph"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_soil_ph_maximum_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_ph"
                        android:textColor="#000000"
                        android:layout_marginStart="65dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>